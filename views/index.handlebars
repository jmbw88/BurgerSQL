<img src="assets/img/kp.jpg" alt="burgers">
<br>

<h1>Choose your delicious treat, or create a new one!</h1>


<div class="container col-md-4">
<h2>Order Up!</h2>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <li>
        {{this.id}}
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR IT?</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="container col-md-4">
<h2>OM NOM NOM NOM!</h2>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.id}}
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="container col-md-4">
<h2>Add a New Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>